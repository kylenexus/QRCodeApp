@model QRCodeApp.Models.Guest

@{
    ViewBag.Title = "Index";
}

<h2>Guest Registration</h2>

@using (Html.BeginForm())
{
    <div class="form-group row">
        @Html.LabelFor(g => g.EmployeeId, new { @class="col-sm-2 col-form-label" })
        <div class="col-sm-10">
            @Html.EditorFor(g => g.EmployeeId, new {@class="form-control"})
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(g => g.Firstname, new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            @Html.EditorFor(g => g.Firstname, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(g => g.Middlename, new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            @Html.EditorFor(g => g.Middlename, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(g => g.Lastname, new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            @Html.EditorFor(g => g.Lastname, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(g => g.Email, new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            @Html.EditorFor(g => g.Email, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(g => g.Phone, new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            @Html.EditorFor(g => g.Phone, new { @class = "form-control" })
        </div>
    </div>


    <div class="form-group row">
        <div class="offset-sm-2 col-sm-10">
            <button type="submit" class="btn btn-primary">GET QR CODE</button>
        </div>
    </div>
}
